{
  "name": "ai-quiz-server",
  "version": "1.0.0",
  "description": "An AI Quiz generator",
  "license": "ISC",
  "author": "Raihan Uddin",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "migrate:create": "dotenv -e .env -- npx node-pg-migrate create -m src/db/migrations",
    "worker": "tsx watch src/workers/quizWorker.ts",
    "migrate:up": "dotenv -e .env -- node-pg-migrate up -m src/db/migrations",
    "migrate:down": "dotenv -e .env -- node-pg-migrate down -m src/db/migrations"
  },
  "dependencies": {
    "@langchain/core": "^0.3.78",
    "@langchain/google-genai": "^0.2.18",
    "better-auth": "^1.3.28",
    "bullmq": "^5.61.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "ioredis": "^5.8.2",
    "langchain": "^0.3.35",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "dotenv-cli": "^10.0.0",
    "node-pg-migrate": "^8.0.3",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
